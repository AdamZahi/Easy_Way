<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="650.0" prefWidth="1070.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.Viewpostcontrolleur">
   <children>
      <!-- Header -->
      <BorderPane layoutX="-3.0" layoutY="-1.0" prefHeight="81.0" prefWidth="1145.0" style="-fx-background-color: #DDDEC6;">
         <left>
            <ImageView fitHeight="75.0" fitWidth="108.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@LOGOEASY.png" />
               </image>
            </ImageView>
         </left>
         <center>
            <Label text="Liste des Offres" textFill="#880303" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="23.0" />
               </font>
            </Label>
         </center>
      </BorderPane>

      <!-- ScrollPane for displaying posts -->
      <ScrollPane layoutX="50.0" layoutY="100.0" prefHeight="500.0" prefWidth="900.0" fitToWidth="true">
         <content>
            <VBox fx:id="postsContainer" spacing="10" style="-fx-padding: 10;">
               <!-- Static Example Post -->
               <VBox spacing="10" style="-fx-background-color: #E5FEB3; -fx-padding: 15px; -fx-border-color: #ccc; -fx-border-radius: 10px;">
                  <Label text="Offre Covoiturage" textFill="#1c7007">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label text="Description du trajet: " textFill="#6b0808" wrapText="true">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="Lieu de départ : " textFill="#6b0808">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="Lieu d’arrivée :" textFill="#6b0808">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="Date:" textFill="#6b0808">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>

                  <!-- Comment input section -->
                  <VBox spacing="10">
                     <TextArea fx:id="commentInput" prefHeight="60.0" promptText="Ajouter un commentaire..." wrapText="true" />
                     <Button fx:id="submitCommentButton" text="Envoyer" textFill="#f4eeee" style="-fx-background-color: #CF321A;">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Button>
                  </VBox>

                  <!-- Discussion Section -->
                  <VBox fx:id="commentsContainer" spacing="5" style="-fx-padding: 10px; -fx-background-color: #f4f4f4; -fx-border-color: #bbb; -fx-border-radius: 5px;">
                     <Label text="Commentaires :" textFill="#333">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <HBox spacing="10" style="-fx-padding: 5px;">
                        <Label text="Utilisateur 1:" textFill="#0055A4" />
                        <Label text="Très bon trajet!" wrapText="true" />
                     </HBox>
                     <HBox spacing="10" style="-fx-padding: 5px;">
                        <Label text="Utilisateur 2:" textFill="#0055A4" />
                        <Label text="Merci pour le partage" wrapText="true" />
                     </HBox>
                     <!-- More comments will be added dynamically -->
                  </VBox>

                  <!-- Add Delete and Update Buttons in the same line -->
                  <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                     <Button fx:id="deleteButton" text="Supprimer"
                             style="-fx-background-color: #FF6347; -fx-text-fill: #fff; "/>
                     <Button text="Mettre à jour" fx:id="updateButton"
                             style="-fx-background-color: #4682B4; -fx-text-fill: #fff; -fx-padding: 10 20;" />
                  </HBox>
               </VBox>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
