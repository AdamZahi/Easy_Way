<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="600.0" prefWidth="1080.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.event.editPageController">
    <VBox prefHeight="600.0" prefWidth="190.0" style="-fx-background-color: white;">
        <VBox alignment="CENTER" prefHeight="252.0" prefWidth="190.0" styleClass="profile-layout"
              stylesheets="@profileCard.css">
            <ImageView fitHeight="129.0" fitWidth="138.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../assets/avatar.jpg"/>
            </ImageView>
            <Label text="Adam Zahi" textFill="WHITE">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
                <font>
                    <Font name="Corbel Bold" size="28.0"/>
                </font>
            </Label>
        </VBox>
        <VBox alignment="CENTER" prefHeight="450.0" prefWidth="292.0" style="-fx-background-color: white;">
            <VBox.margin>
                <Insets left="10.0" right="10.0"/>
            </VBox.margin>
            <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0"
                    style="-fx-background-color: D32F2F;" text="Vehicule" textFill="WHITE">
                <font>
                    <Font name="Corbel Bold" size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#goToEventList"
                    prefHeight="35.0" prefWidth="114.0" style="-fx-background-color: D32F2F;" text="Evenement"
                    textFill="WHITE">
                <font>
                    <Font name="Corbel Bold" size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="45.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0"
                    style="-fx-background-color: D32F2F;" text="Reclamation" textFill="WHITE">
                <font>
                    <Font name="Corbel Bold" size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="80.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0"
                    style="-fx-background-color: D32F2F;" text="Trajet" textFill="WHITE">
                <font>
                    <Font name="Corbel Bold" size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="116.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0"
                    style="-fx-background-color: D32F2F;" text="Ligne" textFill="WHITE">
                <font>
                    <Font name="Corbel Bold" size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="151.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0"
                    style="-fx-background-color: D32F2F;" text="Covoiturage" textFill="WHITE">
                <font>
                    <Font name="Corbel Bold" size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
            </Button>
            <Button layoutX="10.0" layoutY="186.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="114.0"
                    style="-fx-background-color: D32F2F;" text="Diconnecter" textFill="WHITE">
                <font>
                    <Font name="Corbel Bold" size="13.0"/>
                </font>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </VBox>
    <VBox alignment="CENTER" layoutX="190.0" layoutY="1.0" prefHeight="600.0" prefWidth="890.0" spacing="15" style="-fx-padding: 20px; -fx-background-color: #FFFFFF;">

        <!-- Title -->
        <Label alignment="TOP_LEFT" style="-fx-font-size: 24px; -fx-text-fill: #D32F2F; -fx-font-weight: bold;" text="Modifier un Événement">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin></Label>

        <!-- Type Choice Box -->
        <HBox alignment="CENTER" spacing="80.0">
            <Label prefHeight="18.0" prefWidth="80.0" text="Type:" />
            <ChoiceBox fx:id="typeChoiceBox" prefWidth="280.0" />
        </HBox>

        <!-- Ligne Affectée Field -->
        <HBox alignment="CENTER" spacing="80.0">
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="80.0" text="Ligne Affectée:" />
            <TextField fx:id="ligneField" prefWidth="280.0" promptText="Numéro de ligne" />
        </HBox>

        <!-- Date Debut -->
        <HBox alignment="CENTER" prefHeight="26.0" prefWidth="646.0" spacing="80.0">
            <Label prefWidth="80.0" text="Date Début:" />
            <DatePicker fx:id="dateDebutPicker" prefWidth="280.0" />
        </HBox>

        <!-- Date Fin -->
        <HBox alignment="CENTER" spacing="80.0">
            <Label prefWidth="80.0" text="Date Fin:" />
            <DatePicker fx:id="dateFinPicker" prefHeight="26.0" prefWidth="280.0" />
        </HBox>

        <!-- Status Choice Box -->
        <HBox alignment="CENTER" spacing="80.0">
            <Label prefWidth="80.0" text="Statut:" />
            <ChoiceBox fx:id="statusChoiceBox" prefHeight="26.0" prefWidth="280.0" />
        </HBox>

        <!-- Description Field -->
        <HBox alignment="TOP_CENTER" spacing="20.0">
            <TextArea fx:id="descText" prefHeight="200.0" prefWidth="851.0" promptText="Donnez la description de l'evenement" />
        </HBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button onAction="#goBack" style="-fx-background-color: Lightblue;" text="Retour" textFill="WHITE">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
            <Button onAction="#clearAll" style="-fx-background-color: #EF9A9A; -fx-text-fill: white; -fx-font-weight: bold;" text="tout effacer" />
            <Button onAction="#updateEvent" style="-fx-background-color: #008000; -fx-text-fill: white; -fx-font-weight: bold;" text="Modifier" />
        </HBox>

    </VBox>
</Pane>
